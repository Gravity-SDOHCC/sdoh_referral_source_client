<!-- dashboard/_fhir_resource_modal.html.erb -->

<div class="modal fade" id="fhir-resource-modal-<%= resource.id %>" tabindex="-1" aria-labelledby="fhirResourceModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="fhirResourceModalLabel">FHIR Resource JSON</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <pre><code class="language-json"><%= JSON.pretty_generate(resource.fhir_resource).html_safe %></code></pre>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
