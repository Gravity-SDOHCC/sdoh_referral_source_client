<!-- app/views/dashboard/_personal_characteristics.html.erb -->

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mt-3 mb-2">
        <h3 class="mb-0">Personal Characteristics</h3>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#add-personal-characteristics-modal">
          Add Personal Characteristic
        </button>
      </div>
      <div class="card">
        <div class="card-body p-3">
          <% if personal_characteristics.nil? %>
            <p>Unable to fetch personal characteristics.</p>
          <% elsif personal_characteristics.empty? %>
            <p>No personal characteristics found.</p>
          <% else %>
            <div class="table-responsive">
              <table class="table table-sm table-striped">
                <thead>
                  <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Performer</th>
                    <th scope="col">Method</th>
                    <th scope="col">Value</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% personal_characteristics.each do |pc| %>
                    <tr>
                      <td><%= pc.type %></td>
                      <td><%= pc.performer_name %></td>
                      <td><%= pc.reported_method %></td>
                      <td><%= pc.value %></td>
                      <td class="d-flex flex-lg-row flex-sm-column justify-content-between align-items-center">
                        <%= link_to 'FHIR Resource', "#fhir-resource-modal-#{pc.id}", data: { bs_toggle: 'modal'}, class: 'btn btn-primary btn-sm m-1' %>
                        <%= link_to "Delete", personal_characteristic_path(pc.id), method: :delete, data: { confirm: "Delete personal characteristics #{pc.type}?" }, class: "btn btn-danger btn-sm m-1" %>
                        <% content_for :modals do %>
                          <%= render 'shared/fhir_resource_modal', resource: pc %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :modals do %>
  <%= render 'personal_characteristics/form_modal' %>
<% end %>

